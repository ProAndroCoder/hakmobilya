@model List<WebApplication1.Models.kategori>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ var tek = true;}

@foreach (var kat in Model)
{
    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="product-item-title d-flex">
                    <div class="bg-faded p-5 d-flex @(tek ? "ml-auto" : "mr-auto") rounded">
                        <h2 class="section-heading mb-0">
                            <span class="section-heading-lower">@kat.ad</span>
                            @Html.ActionLink("Ürünleri gör", "KategoriUrunler", new { kat.id }, new { @class = "btn btn-info mx-4" })
                        </h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    tek = !tek;
}
